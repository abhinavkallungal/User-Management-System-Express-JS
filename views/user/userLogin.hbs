<section id="user_login">
    <div class="container">
        <div class="row justify-content-center aligin-items-center">
            <div class="col-lg-8">
                <div class="card mt-5 mb-5">
                    <div class="row">
                        <div class="col-lg-6 p-4 d-flex align-items-end">
                            <div class="img d-flex align-items-end ">
                                <img src="/images/login.svg" alt="">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="login p-5">

                            <h2 class="text-center" >LOGIN</h2>
                            <form action="" id="login">
                                <div  class="d-flex firm-item">
                                    <label for="" class="mb-3">Email</label>
                                    <input type="email" id="email" name="email" value="abhinavkallungal15@gmail.com" placeholder="Enter Your Email.....">
                                </div>
                                <div class="d-flex firm-item ">
                                    <label for="" class="mb-3">Password</label>
                                    <input type="password" id="password"  name="password" value="Abhi123*" placeholder="Enter Your Password.....">
                                </div>
                                <span class="msg" id="msg"> </span>
                                <div class="d-flex justify-content-center mt-5">
                                   <input type="submit" class="theme-btn" value="LOGIN">
                                </div>

                            </form>
                                <span class="mt-4 text-center"><a href="/signup">Create New Account</a></span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
 $(document).ready(function () {
        $("#login").submit(function (e) {
            e.preventDefault();  
            let msg =document.getElementById('msg');
            let email = $("#email").val()
            let password = $("#password").val()

            $.ajax({
                url: '/login',
                data: {
                    email,password
                },
                method: 'post',
                success: (response) => {
                     if(!response.logedIn){
                         console.log(response.message)
                         msg.innerHTML=response.message;

                     }else{
                        location.href = "http://localhost:3000/" 
                     }
                },
                error:(response)=>{
                    console.log(response)
                }

            });
        });
      
    });
            
    
</script>